<Window x:Class="AdaptableMgmtWPF.Program.UserControllers.WindowsRegister.RegisterSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Fornecedor"
        Height="180" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Registrar Fornecedor" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Input para Fornecedor -->
            <TextBox x:Name="SupplierNameTextBox" Width="250" Margin="0,0,0,10"/>
            <Button Content="Registrar Fornecedor" Click="RegisterButton_Click" Width="200" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
