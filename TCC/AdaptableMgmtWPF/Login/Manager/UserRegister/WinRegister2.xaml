<Window x:Class="AdaptableMgmtWPF.WinRegister2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="200" Width="300">
    <Grid>
        <!-- Define a Grid with two rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label for username -->
        <TextBlock Text="Login:" VerticalAlignment="Center" Margin="10" Grid.Row="0"/>

        <!-- TextBox for username -->
        <TextBox x:Name="loginTextbox" VerticalAlignment="Center" Margin="20,0,20,0" Grid.Row="1" Width="260"/>

        <!-- Label for password -->
        <TextBlock Text="Senha:" VerticalAlignment="Top" Margin="10,5,10,0" Grid.Row="2"/>

        <!-- TextBox for password -->
        <PasswordBox x:Name="passwordBox" VerticalAlignment="Top" Margin="20,26,20,0" Grid.Row="2" Width="260" Height="20"/>

        <!-- Login button -->
        <Button Content="Cadastrar" VerticalAlignment="Top" Margin="20,59,20,0" Grid.Row="2" Width="260" Click="LoginButton_Click"/>
    </Grid>
</Window>
